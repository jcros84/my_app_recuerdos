{% extends 'base.html.twig' %}

{% block title %}Mantenimiento de Temas{% endblock %}

{% block body %}
    <h1>Mantenimiento de Temas</h1>

    <table class="table-bordered align-content-center">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tema</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tema in temas %}
            <tr>
                <td>{{ tema.id }}</td>
                <td>{{ tema.tema }}</td>
                <td>{{ tema.CreatedAt ? tema.CreatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_tema_show', {'id': tema.id}) }}">show</a>
                    <a href="{{ path('app_tema_edit', {'id': tema.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_tema_new') }}">Create new</a>
{% endblock %}
